{
  "name": "p2p-claude-code",
  "version": "0.1.0",
  "description": "P2P daemon for Claude Code - connect remotely via HyperDHT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "p2p-claude": "./bin/p2p-claude.mjs",
    "p2p-chat": "./bin/p2p-chat.mjs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "daemon": "node dist/index.js daemon",
    "chat": "node dist/client/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hyperdht": "^6.0.0",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
